<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="life.tree3.trunk.dao.SysPageMapper">

    <resultMap type="life.tree3.trunk.pojo.entity.SysPage" id="SysPageMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="path" column="path" jdbcType="VARCHAR"/>
        <result property="filePath" column="file_path" jdbcType="VARCHAR"/>
        <result property="weights" column="weights" jdbcType="INTEGER"/>
        <result property="locked" column="locked" jdbcType="BOOLEAN"/>
        <result property="deleted" column="deleted" jdbcType="BOOLEAN"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <resultMap id="SysPageDtoMap" type="life.tree3.trunk.pojo.dto.PageDto" extends="SysPageMap">
        <!--根据角色id查询对应的页面-->
        <collection property="perms" column="{pageId=id}"
                    select="life.tree3.trunk.dao.SysPermMapper.queryPermissionsForPages"/>
    </resultMap>

    <!--全部字段-->
    <sql id="allColumn"> id
    , parent_id, title, description, path, file_path, weights, locked,deleted, create_time, update_time </sql>

    <!--通用对SysPage各个属性的值的非空判断-->
    <sql id="commonsValue">
        <if test="parentId != null">
            parent_id = #{parentId},
        </if>
        <if test="title != null and title != ''">
            title = #{title},
        </if>
        <if test="description != null and description != ''">
            description = #{description},
        </if>
        <if test="path != null and path != ''">
            path = #{path},
        </if>
        <if test="filePath != null and filePath != ''">
            file_path = #{filePath},
        </if>
        <if test="weights != null">
            weights = #{weights},
        </if>
        <if test="locked != null">
            locked = #{locked},
        </if>
        <if test="deleted != null">
            deleted = #{deleted},
        </if>
        <if test="createTime != null">
            create_time = #{createTime},
        </if>
        <if test="updateTime != null">
            update_time = #{updateTime},
        </if>
    </sql>

    <!--添加语句的字段列表-->
    <sql id="insertColumn">
        <if test="parentId != null">
            parent_id,
        </if>
        <if test="title != null and title != ''">
            title,
        </if>
        <if test="description != null and description != ''">
            description,
        </if>
        <if test="path != null and path != ''">
            path,
        </if>
        <if test="filePath != null and filePath != ''">
            file_path,
        </if>
        <if test="weights != null">
            weights,
        </if>
        <if test="locked != null">
            locked,
        </if>
        <if test="deleted != null">
            deleted,
        </if>
        <if test="createTime != null">
            create_time,
        </if>
        <if test="updateTime != null">
            update_time,
        </if>
    </sql>

    <!--添加语句的值列表-->
    <sql id="insertValue">
        <if test="parentId != null">
            #{parentId},
        </if>
        <if test="title != null and title != ''">
            #{title},
        </if>
        <if test="description != null and description != ''">
            #{description},
        </if>
        <if test="path != null and path != ''">
            #{path},
        </if>
        <if test="filePath != null and filePath != ''">
            #{filePath},
        </if>
        <if test="weights != null">
            #{weights},
        </if>
        <if test="locked != null">
            #{locked},
        </if>
        <if test="deleted != null">
            #{deleted},
        </if>
        <if test="createTime != null">
            #{createTime},
        </if>
        <if test="updateTime != null">
            #{updateTime},
        </if>
    </sql>

    <!--多条件查询的条件-->
    <sql id="queryCondition">
        <if test="id != null">
            and id = #{id}
        </if>

        <if test="parentId != null">
            and parent_id = #{parentId}
        </if>
        <if test="title != null and title != ''">
            and title = #{title}
        </if>
        <if test="description != null and description != ''">
            and description = #{description}
        </if>
        <if test="path != null and path != ''">
            and path = #{path}
        </if>
        <if test="filePath != null and filePath != ''">
            and file_path = #{filePath}
        </if>
        <if test="weights != null">
            and weights = #{weights}
        </if>
        <if test="locked != null">
            and locked = #{locked}
        </if>
        <if test="deleted != null">
            and deleted = #{deleted}
        </if>
        <if test="createTime != null">
            and create_time = #{createTime}
        </if>
        <if test="updateTime != null">
            and update_time = #{updateTime}
        </if>
    </sql>

    <!--查询单个-->
    <select id="queryById" resultMap="SysPageMap">
        select
        <include refid="allColumn"></include>
        from sys_page
        <where>
            id = #{id}
        </where>
    </select>

    <select id="queryPagesForRole" resultMap="SysPageDtoMap">
        select p.id
        , p.parent_id, p.title, p.description, p.path, p.file_path, p.weights, p.locked,p.deleted, p.create_time, p.update_time
        from sys_role r
        left join sys_role_page rp on r.id = rp.role_id
        left join sys_page p on rp.page_id = p.id
        <where>
            and r.id = #{roleId}
            and p.locked = 0
            and r.deleted = 0
            and rp.deleted = 0
            and p.deleted = 0
        </where>
    </select>


    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysPageMap">
        select
        <include refid="allColumn"></include>
        from sys_page
        <trim prefix="where" prefixOverrides="and" suffixOverrides=",">
            <include refid="queryCondition"></include>
        </trim>
    </select>


    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from sys_page
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="parentId != null">
                and parent_id = #{parentId}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="description != null and description != ''">
                and description = #{description}
            </if>
            <if test="path != null and path != ''">
                and path = #{path}
            </if>
            <if test="filePath != null and filePath != ''">
                and file_path = #{filePath}
            </if>
            <if test="weights != null">
                and weights = #{weights}
            </if>
            <if test="locked != null">
                and locked = #{locked}
            </if>
            <if test="deleted != null">
                and deleted = #{deleted}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
        </where>
    </select>


    <!--通过主键修改数据-->
    <update id="update">
        update sys_page
        <set>
            <include refid="commonsValue"></include>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from sys_page
        where id = #{id}
    </delete>

    <!--通过主键逻辑删除-->
    <delete id="logicDeleteById">
        update sys_page
        <set>
            deleted=1
        </set>
        <where>
            id = #{id}
        </where>
    </delete>


    <!--新增sys_page:哪个字段不为空就添加哪列数据,返回自增主键-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sys_page
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="insertColumn"/>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <include refid="insertValue"/>
        </trim>
    </insert>

    <!--批量插入-->
    <insert id="insertBatch" useGeneratedKeys="true">
        insert into sys_page(parent_id, title, description, path, file_path, weights, locked,deleted, create_time, update_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.parentId}, #{entity.title}, #{entity.description}, #{entity.path}, #{entity.filePath},
            #{entity.weights}, #{entity.locked}, #{entity.deleted}, #{entity.createTime}, #{entity.updateTime})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" useGeneratedKeys="true">
        insert into sys_page(parent_id, title, description, path, file_path, weights, locked,deleted, create_time, update_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.parentId}, #{entity.title}, #{entity.description}, #{entity.path}, #{entity.filePath},
            #{entity.weights}, #{entity.locked}, #{entity.deleted}, #{entity.createTime}, #{entity.updateTime})
        </foreach>
        on duplicate key update
        parent_id = values(parent_id),
        title = values(title),
        description = values(description),
        path = values(path),
        file_path = values(file_path),
        weights = values(weights),
        locked = values(locked),
        deleted = values(deleted),
        create_time = values(create_time),
        update_time = values(update_time)
    </insert>

</mapper>

